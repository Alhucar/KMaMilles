<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alvaro.kmamilles.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="36dp"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textKM"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMillesaKM"
        android:layout_marginRight="71dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="39dp"
        android:layout_height="36dp"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textKM"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonKMaMilles"
        android:layout_marginLeft="143dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonMillesaKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milles a Km"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        android:layout_marginRight="33dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/textKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toRightOf="@+id/labelKM"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/labelKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kilometres"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_margin="120dp"
        tools:layout_editor_absoluteY="35dp" />

    <TextView
        android:id="@+id/LabelMilles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milles"
        tools:layout_editor_absoluteX="36dp"
        android:layout_marginTop="207dp"
        app:layout_constraintTop_toBottomOf="@+id/labelKM" />

    <EditText
        android:id="@+id/textMilles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/LabelMilles"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toBottomOf="@+id/textKM" />

    <Button
        android:id="@+id/buttonKMaMilles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KM a Milles"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="39dp"
        android:layout_height="36dp"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:layout_marginLeft="143dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textMilles" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="36dp"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:layout_marginRight="71dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textMilles" />

</android.support.constraint.ConstraintLayout>
